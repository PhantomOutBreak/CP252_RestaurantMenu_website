<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>เมนูอาหาร</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body {
            background-color: #fdfde1;
        }
        .container {
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.2);
            max-width: 800px;
            margin: auto;
            margin-top: 30px;
        }
        .menu-container {
            display: flex;
            justify-content: center;
            gap: 40px;
            flex-wrap: wrap;
            margin-top: 20px;
        }
        .menu-item {
            text-align: center;
            cursor: pointer;
            position: relative;
            padding-bottom: 40px;
        }
        .menu-item img {
            width: 100px;
            height: 100px;
            object-fit: cover;
            border-radius: 50%;
        }
        .search-box {
            width: 100%;
            padding: 10px;
            font-size: 1.2rem;
        }
        .favorite-btn,
        .todo-btn {
            position: absolute;
            bottom: 5px;
            background: none;
            border: none;
            cursor: pointer;
            font-size: 2rem;
        }
        .favorite-btn {
            right: 5px;
            color: #ea0000;
        }
        .favorite-btn.activated i {
            color: red;
        }
        .todo-btn {
            left: 5px;
            color: #007bff;
        }
        .todo-btn.activated i {
            color: green;
        }
        .done-btn {
            position: absolute;
            top: 5px;
            right: 5px;
            background: none;
            border: none;
            cursor: pointer;
            font-size: 1.5rem;
            color: #ffcc00;
        }
    </style>
</head>
<body>
    <nav style="background: linear-gradient(to right, #4158D0,#C850C0,#FFCC70);"
         class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/menu">4 เมนูลับคุณย่า</a>
            <div class="d-flex">
                <a href="/logout" 
                   class="btn btn-danger me-2" 
                   style="margin-left: auto; 
                         background: linear-gradient(to right, #FF4136, #fdfd00);">
                    <i class="fas fa-sign-out-alt"></i> ออกจากระบบ
                </a>
            </div>
        </div>
    </nav>
    <div class="container">
        <h4>ค้นหาเมนู</h4>
        <input type="text" id="searchInput" class="search-box" placeholder="พิมพ์ชื่อเมนูที่ต้องการ...">
        <div class="menu-container" id="menuList">
            <!-- เมนูผัดกระเพรา -->
            <div class="menu-item" data-name="ผัดกระเพรา" data-page="pad-krapow" onclick="goToDetail('pad-krapow')">
                <img src="/image/padkrapow.png" alt="ผัดกระเพรา">
                <p><b>ผัดกระเพรา</b></p>
                <button class="favorite-btn" onclick="toggleFavorite(event, this, this.parentNode)">
                    <i class="far fa-heart"></i>
                </button>
                <button class="todo-btn" onclick="toggleTodo(event, this, this.parentNode)">
                    <i class="far fa-check-circle"></i>
                </button>
            </div>
            <!-- เมนูแกงเขียวหวานไก่ -->
            <div class="menu-item" data-name="แกงเขียวหวานไก่" data-page="green-curry" onclick="goToDetail('green-curry')">
                <img src="/image/greencurry.png" alt="แกงเขียวหวานไก่">
                <p><b>แกงเขียวหวานไก่</b></p>
                <button class="favorite-btn" onclick="toggleFavorite(event, this, this.parentNode)">
                    <i class="far fa-heart"></i>
                </button>
                <button class="todo-btn" onclick="toggleTodo(event, this, this.parentNode)">
                    <i class="far fa-check-circle"></i>
                </button>
            </div>
            <!-- เมนูต้มยำกุ้ง -->
            <div class="menu-item" data-name="ต้มยำกุ้ง" data-page="tom-yum" onclick="goToDetail('tom-yum')">
                <img src="/image/tomyumkung.png" alt="ต้มยำกุ้ง">
                <p><b>ต้มยำกุ้ง</b></p>
                <button class="favorite-btn" onclick="toggleFavorite(event, this, this.parentNode)">
                    <i class="far fa-heart"></i>
                </button>
                <button class="todo-btn" onclick="toggleTodo(event, this, this.parentNode)">
                    <i class="far fa-check-circle"></i>
                </button>
            </div>
            <!-- เมนูน้ำพริกอ่อง -->
            <div class="menu-item" data-name="น้ำพริกอ่อง" data-page="nam-prik-ong" onclick="goToDetail('nam-prik-ong')">
                <img src="/image/namprikong.png" alt="น้ำพริกอ่อง">
                <p><b>น้ำพริกอ่อง</b></p>
                <button class="favorite-btn" onclick="toggleFavorite(event, this, this.parentNode)">
                    <i class="far fa-heart"></i>
                </button>
                <button class="todo-btn" onclick="toggleTodo(event, this, this.parentNode)">
                    <i class="far fa-check-circle"></i>
                </button>
            </div>
        </div>

        <!-- รายการโปรด -->
        <div class="container mt-4">
            <h4>รายการโปรดของคุณ</h4>
            <div class="favorite-items d-flex flex-wrap gap-3 p-3" style="background: #f5f8d3; border-radius: 10px;">
            </div>
        </div>

        <!-- To-Do List -->
        <div class="container mt-4">
            <h4>รายการที่ต้องทำ</h4>
            <div class="todo-items d-flex flex-wrap gap-3 p-3" style="background: #e6ffe6; border-radius: 10px;">
            </div>
        </div>

        <!-- Done List -->
        <div class="container mt-4">
            <h4>รายการที่ทำเสร็จแล้ว</h4>
            <div class="done-items d-flex flex-wrap gap-3 p-3" style="background: #e6f9ff; border-radius: 10px;">
            </div>
        </div>
    </div>

<script>
    function goToDetail(page) {
        window.location.href = page;
    }

    // ฟังก์ชันจัดการ Favorite
    function toggleFavorite(event, btn, itemElement) {
        event.stopPropagation();
        const name = itemElement.dataset.name;
        fetch('/api/favorites', {
            method: 'PUT',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ menu: name })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                btn.querySelector('i').classList.toggle('far');
                btn.querySelector('i').classList.toggle('fas');
                loadFavorites();
            } else {
                alert(data.error);
            }
        });
    }

    // โหลดรายการโปรด
    function loadFavorites() {
        const favoriteItems = document.querySelector('.favorite-items');
        favoriteItems.innerHTML = '';
        fetch('/api/favorites')
        .then(response => response.json())
        .then(data => {
            const favorites = data.favorites || [];
            if (favorites.length === 0) {
                favoriteItems.innerHTML = '<p>ยังไม่มีรายการโปรด</p>';
                return;
            }
            favorites.forEach(name => {
                const item = document.querySelector(`.menu-item[data-name="${name}"]`);
                if (!item) return;
                const imgSrc = item.querySelector('img').src;
                const page = item.dataset.page;
                const card = `
                    <div class="card p-2" style="width: 180px;">
                        <img src="${imgSrc}" class="card-img-top rounded-circle" style="width: 100px; height: 100px; object-fit: cover;">
                        <div class="card-body text-center">
                            <h6>${name}</h6>
                            <a href="${page}" class="btn btn-sm btn-primary">ดูรายละเอียด</a>
                        </div>
                    </div>
                `;
                favoriteItems.insertAdjacentHTML('beforeend', card);
                const favoriteBtn = item.querySelector('.favorite-btn');
                if (favoriteBtn) {
                    favoriteBtn.classList.add('activated');
                    favoriteBtn.querySelector('i').classList.replace('far', 'fas');
                }
            });
        });
    }

    // ฟังก์ชันจัดการ To-Do
    function toggleTodo(event, btn, itemElement) {
        event.stopPropagation();
        const name = itemElement.dataset.name;
        fetch('/api/todo', {
            method: 'PUT',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ menu: name })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                btn.querySelector('i').classList.toggle('far');
                btn.querySelector('i').classList.toggle('fas');
                loadTodos();
            } else {
                alert(data.error);
            }
        });
    }

    // โหลด To-Do List
    function loadTodos() {
        const todoItems = document.querySelector('.todo-items');
        todoItems.innerHTML = '';
        fetch('/api/todo')
        .then(response => response.json())
        .then(data => {
            const todos = data.todos || [];
            if (todos.length === 0) {
                todoItems.innerHTML = '<p>ยังไม่มีรายการที่ต้องทำ</p>';
                return;
            }
            todos.forEach(name => {
                const item = document.querySelector(`.menu-item[data-name="${name}"]`);
                if (!item) return;
                const imgSrc = item.querySelector('img').src;
                const page = item.dataset.page;
                const card = `
                    <div class="card p-2" style="width: 180px;">
                        <img src="${imgSrc}" class="card-img-top rounded-circle" style="width: 100px; height: 100px; object-fit: cover;">
                        <div class="card-body text-center">
                            <h6>${name}</h6>
                            <a href="${page}" class="btn btn-sm btn-primary">ดูรายละเอียด</a>
                            <button 
                                class="done-btn" 
                                type="button" 
                                onclick="markAsDone('${name}')"
                            >
                                <i class="fas fa-check"></i>
                            </button>
                        </div>
                    </div>
                `;
                todoItems.insertAdjacentHTML('beforeend', card);
                const todoBtn = item.querySelector('.todo-btn');
                if (todoBtn) {
                    todoBtn.classList.add('activated');
                    todoBtn.querySelector('i').classList.replace('far', 'fas');
                }
            });
        });
    }

    // ทำเครื่องหมายว่าทำเสร็จแล้ว
    function markAsDone(menuName) {
        fetch(`/api/todo/${encodeURIComponent(menuName)}`, {
            method: 'DELETE'
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                loadTodos();
                loadDone();
            } else {
                alert(data.error);
            }
        });
    }

    // โหลด Done List
    function loadDone() {
        const doneItems = document.querySelector('.done-items');
        doneItems.innerHTML = '';
        fetch('/api/done')
        .then(response => response.json())
        .then(data => {
            const dones = data.dones || [];
            if (dones.length === 0) {
                doneItems.innerHTML = '<p>ยังไม่มีรายการที่ทำเสร็จ</p>';
                return;
            }
            dones.forEach(name => {
                const item = document.querySelector(`.menu-item[data-name="${name}"]`);
                if (!item) return;
                const imgSrc = item.querySelector('img').src;
                const page = item.dataset.page;
                const card = `
                    <div class="card p-2" style="width: 180px;">
                        <img src="${imgSrc}" class="card-img-top rounded-circle" style="width: 100px; height: 100px; object-fit: cover;">
                        <div class="card-body text-center">
                            <h6>${name}</h6>
                            <a href="${page}" class="btn btn-sm btn-primary">ดูรายละเอียด</a>
                        </div>
                    </div>
                `;
                doneItems.insertAdjacentHTML('beforeend', card);
            });
        });
    }

    // โหลดข้อมูลเมื่อเปิดหน้า
    document.addEventListener('DOMContentLoaded', function() {
        loadFavorites();
        loadTodos();
        loadDone();
    });

    // ฟังก์ชันค้นหาเมนู
    document.getElementById("searchInput").addEventListener("input", function() {
        let searchValue = this.value.trim().toLowerCase();
        let menuItems = document.querySelectorAll(".menu-item");
        menuItems.forEach(item => {
            let menuName = item.getAttribute("data-name").toLowerCase();
            item.style.display = searchValue === "" || menuName.includes(searchValue) ? "block" : "none";
        });
    });
</script>
</body>
</html>